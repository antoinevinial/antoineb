extends layout/_base-project

block header
	+header--project('Coucou', 'illustration')

block content
	div.carousel.js-carousel
		div.carousel__wrapper
			ul.carousel__slider.js-carousel-slider
				li.carousel__item.carousel__item--intro.js-carousel-item
					div.carousel__item__container
						div.carousel__section
							span.carousel__label For
							span.carousel__value Experiment
						div.carousel__section
							span.carousel__label Released
							span.carousel__value February 2016
						div.carousel__section
							span.carousel__label On
							span.carousel__value Photography, Digital, Glitch
				li.carousel__item.js-carousel-item
					img.carousel__img.js-carousel-img(src="img/3Dbody/01.jpg")
				li.carousel__item.js-carousel-item
					img.carousel__img.js-carousel-img(src="img/3Dbody/02.jpg")
				li.carousel__item.carousel__item--next.js-carousel-item
					img.carousel__img.js-carousel-img(src="img/blackwhite/14.jpg")
					a.carousel__item__content(href="blackwhite")
						span.carousel__item__content__label #[span.break-mobile Next] project
							+icon-arrow-next
						span.carousel__item__content__title Else - Mirage EP /
						span.carousel__item__content__category Photography

