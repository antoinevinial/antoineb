mixin slider-projects(nbItems)
	div.grid
		div.row
			ul.projects.js-projects
				- for (i = 0; i < nbItems; i++)
					li.projects__item.cell-2.js-projects-item
						a.projects__link(href="#")
							img.projects__img(src="http://placehold.it/416x250")
							h2.projects__title Impelled to confer perpetuity
							span.projects__label Interactive
					li.projects__item.cell-2.js-projects-item
						a.projects__link(href="#")
							img.projects__img(src="http://placehold.it/416x510")
							h2.projects__title Impelled to confer perpetuity
							span.projects__label Interactive